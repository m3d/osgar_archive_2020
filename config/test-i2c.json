{
  "version": 2,
  "robot": {
    "modules": {
      "app": {
          "driver": "application",
          "in": ["position", "heading"],
          "out": ["move"],
          "init": {}
      },
      "boat": {
          "driver": "marina",
          "in": ["i2c", "move"],
          "out": ["cmd", "heading"],
          "init": {}
      },
      "i2c": {
          "driver": "i2c",
          "in": ["cmd"],
          "out": ["i2c"],
          "init": {
            "port": 1
          }
      },
      "gps": {
          "driver": "gps",
          "in": ["raw"],
          "out": ["position", "rel_position"],
          "init": {}
      },
      "gps_serial": {
          "driver": "serial",
          "in": [],
          "out": ["raw"],
          "init": {"port": "/dev/serial0", "speed": 9600}
      }
    },
    "links": [["i2c.i2c", "boat.i2c"], ["boat.cmd", "i2c.cmd"],
              ["gps_serial.raw", "gps.raw"], ["app.move", "boat.move"],
              ["gps.position", "app.position"], ["boat.heading", "app.heading"]]
  }
}
