{
  "version": 2,
  "robot": {
    "modules": {
      "app": {
          "driver": "application",
          "in": ["emergency_stop", "pose2d"],
          "out": ["desired_speed"],
          "init": {
            "max_speed": 0.5
          }
      },
      "kloubak": {
          "driver": "kloubak",
          "in": ["can", "desired_speed"],
          "out": ["can", "encoders", "emergency_stop", "pose2d"],
          "init": {}
      },          
      "can": {
          "driver": "can",
          "in": ["raw", "can"],
          "out": ["can", "raw"],
          "init": {"speed": "500k", "canopen":false}
      },
      "serial": {
          "driver": "serial",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"port": "/dev/ttyS0", "speed": 115200,
                   "rtscts":true, "reset":true}
      }
    },
    "links": [["serial.raw", "can.raw"],
              ["can.raw", "serial.raw"],
              ["kloubak.can", "can.can"],
              ["can.can", "kloubak.can"],
              ["app.desired_speed", "kloubak.desired_speed"],
              ["kloubak.pose2d", "app.pose2d"]
      ]
  }
}
