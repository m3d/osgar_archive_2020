{
  "version": 2,
  "robot": {
    "modules": {
      "app": {
          "driver": "application",
          "in": ["emergency_stop", "pose2d"],
          "out": ["desired_speed"],
          "init": {
            "max_speed": 0.5
          }
      },
      "robot": {
          "driver": "tankmaria",
          "in": ["desired_speed", "raw", "pwm"],
          "out": ["emergency_stop", "pose2d", "raw", "encoders"],
          "init": {}
      },
      "timer": {
          "driver": "timer",
          "in": [],
          "out": ["tick"],
          "init": {
            "sleep": 0.1
          }
      },
      "serial": {
          "driver": "serial",
          "in": ["raw"],
          "out": ["raw"],
          "init": {"port": "/dev/arduino-motor", "speed": 9600}
      },
      "rs": {
          "driver": "realsense",
          "in": ["trigger"],
          "out": ["pose2d"],
          "init": {}
      }
    },
    "links": [["app.desired_speed", "robot.desired_speed"],
              ["robot.emergency_stop", "app.emergency_stop"],
              ["robot.pose2d", "app.pose2d"],
              ["timer.tick", "robot.pwm"],
              ["serial.raw", "robot.raw"],
              ["robot.raw", "serial.raw"],
              ["timer.tick", "rs.trigger"]]
  }
}
